@model IEnumerable<FacturationWebSite.Models.CustomerPrice>

@{
    ViewData["Title"] = "Prix spécifiques par clients";
}

<h2>Prix sp&eacute;cifiques par clients</h2>

<p>
    <a asp-action="Create" class="btn btn-success fa fa-plus"></a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Customer.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Description)
            </td>
            <td>
                <a class="btn btn-warning fa fa-edit" asp-action="Edit"asp-route-id="@item.CustomerPriceId"></a> |
                <a class="btn btn-info fa fa-plus-square" asp-action="Details"asp-route-id="@item.CustomerPriceId"></a> |
                <a class="btn btn-danger fa fa-trash" asp-action="Delete"asp-route-id="@item.CustomerPriceId"></a>
            </td>
        </tr>
}
    </tbody>
</table>
